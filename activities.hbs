<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Select all the post-date elements
        var postDates = document.querySelectorAll('.post-date');

        // Select all the post-content elements
        var postContents = document.querySelectorAll('.post-content');

        // This will store the unique dates that have already been processed
        var processedDates = {};

        // Variable to track the first visible date
        var firstDateShown = false;

        // Iterate over each post-date element
        postDates.forEach(function(postDate, index) {
            // Get the date text
            var dateText = postDate.textContent.trim();
            
            // If this date has already been processed and it's not the first one
            if (processedDates[dateText] && firstDateShown) {
                // Hide the date
                postDate.style.display = 'none';
            } else {
                // Mark this date as processed
                processedDates[dateText] = true;
                
                // If this is the first visible date, mark it
                if (!firstDateShown) {
                    firstDateShown = true;
                }
            }
        });
        
        // Initialize infinite scroll
        var elem = document.querySelector('.post-feed');
        var infScroll = new InfiniteScroll(elem, {
            path: '.pagination a.older-posts',
            append: '.post-card',
            status: '.infinite-scroll-status',
            hideNav: '.pagination',
            history: false,
        });
    });
</script>
