{{!< default}}

<main class="site-main">

<div class="page-title" style="text-align:center; margin-bottom:2rem;">
        <h1 style="margin:0;">Links</h1>
        <p>A regularly updated list of links I find interesting with brief commentary.</p>
</div>

<div class="post-feed gh-feed gh-canvas">
        {{#foreach posts}}                        
            <article class="post-card {{post_class}}">
                <header class="post-card-header gh-canvas">
                    <div class="single-meta">
                        <span class="single-meta-item single-meta-date">
                            <time datetime="{{date format='YYYY-MM-DD'}}">
                                {{date published_at format="MMM DD"}} 
                            </time>
                            {{#primary_tag}}
                                <span class="single-meta-item single-meta-tag">
                                    {{!-- <a class="post-tag post-tag-{{slug}}" href="{{url}}">
                                        {{name}}
                                    </a> --}}
                                </span>
                            {{/primary_tag}}
                        </span>
                    </div>
                    <a class="post-card-link" href="{{article.originalArticleUrl}}">
                        {{#if feature_image}}
                        <div class="post-card-image">
                            <img class="post-image"
                                srcset="{{img_url feature_image size="xs"}} 150w,
                                        {{img_url feature_image size="s"}} 400w,
                                        {{img_url feature_image size="m"}} 750w,
                                        {{img_url feature_image size="l"}} 960w,
                                        {{img_url feature_image size="xl"}} 1140w,
                                        {{img_url feature_image size="xxl"}} 1920w"
                                sizes="(max-width: 960px) 400px, 750px"
                                src="{{img_url feature_image size="m"}}"
                                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                            />
                            {{!-- Feature for exposing image attribution using the feature_image_alt field in Ghost Admin
                            {{#if feature_image_alt}}
                            <div style="text-align: right;">
                                <a href="{{feature_image_alt}}" class="photo-via-link" target="_blank">Photo via</a>
                            </div>
                            {{/if}} --}}
                        </div>
                        {{/if}}
                        <h2 class="post-card-title">{{title}}</h2>
                    </a>
                </header>
                <a class="post-card-link" href="{{url}}">
                    <section class="post-card-content">
                        <div class="single-content gh-content gh-canvas">
                            {{content}}
                            {{!-- <p>{{excerpt}} <br><span style="font-size: .7em; color: #FF1A75;">Read More &raquo;</span></p> --}}
                        </div>
                    </section>
                </a>
                </section>
            </article>
        {{/foreach}}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Select all 'link-item' divs
    var linkItems = document.querySelectorAll('.link-item');

    linkItems.forEach(function(item) {
      // Get the 'data-original-url' attribute value
      var originalUrl = item.getAttribute('data-original-url');

      // Find the 'post-card-link' within the parent of the 'link-item'
      var cardLinks = item.closest('.post-card').querySelectorAll('.post-card-link');

      // Update all card links to use the original URL
      cardLinks.forEach(function(link) {
        link.setAttribute('href', originalUrl);
      });

      // Also update the title's inner HTML to be a hyperlink
      var titleElement = item.closest('.post-card').querySelector('.post-card-title');
      if (titleElement) {
        var title = item.getAttribute('data-title');
        titleElement.innerHTML = '<a href="' + originalUrl + '" target="_blank">' + title + '</a>';
      }
    });
  });
</script>

</main>